{
  "repository": "https://github.com/polkadot-js/apps",
  "author": "Jaco Greeff <jacogr@gmail.com>",
  "license": "Apache-2",
  "private": true,
  "homepage": ".",
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@polkadot/api": "^1.12.2",
    "@polkadot/api-contract": "^1.12.2",
    "@polkadot/keyring": "^2.6.1",
    "@polkadot/typegen": "^1.12.2",
    "@polkadot/types": "^1.12.2",
    "@polkadot/util": "^2.6.1",
    "@polkadot/util-crypto": "^2.6.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "analyze": "yarn run build && cd packages/apps && yarn run source-map-explorer build/main.*.js",
    "build": "yarn run build:i18n && yarn run build:code",
    "build:code": "NODE_ENV=production packages/dev/scripts/polkadot-dev-build-ts.js",
    "build:i18n": "./node_modules/i18next-scanner/bin/cli.js --config i18next-scanner.config.js",
    "build:www": "rm -rf packages/apps/build && mkdir -p packages/apps/build && yarn run build:i18n && cd packages/apps && NODE_ENV=production webpack --config webpack.config.js",
    "docs": "echo \"skipping docs\"",
    "clean": "./packages/dev/scripts/polkadot-dev-clean-build.js",
    "clean:i18n": "rm -rf packages/apps/public/locales/en && mkdir -p packages/apps/public/locales/en",
    "lint": "polkadot-dev-run-lint",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "packages/dev/scripts/polkadot-dev-run-test.js packages/page-claims/src",
    "vanitygen": "node packages/page-accounts/scripts/vanitygen.js",
    "start": "cd packages/apps && webpack --config webpack.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@polkadot/dev": "^0.52.11",
    "@polkadot/ts": "^0.3.19",
    "@polkadot/typegen": "^1.5.0-beta.22",
    "@types/bn.js": "^4.11.6",
    "@types/chart.js": "^2.9.14",
    "@types/file-saver": "^2.0.1",
    "@types/i18next": "^13.0.0",
    "@types/react-copy-to-clipboard": "^4.3.0",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-tooltip": "^3.11.0",
    "@types/store": "^2.0.2",
    "@types/styled-components": "^5.0.1",
    "@types/styled-theming": "^2.2.2",
    "@types/yargs": "^15.0.4",
    "empty": "^0.10.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "i18next-scanner": "^2.10.3",
    "markdown-loader": "^5.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "source-map-explorer": "^2.3.1",
    "style-loader": "^1.1.3",
    "thread-loader": "^2.1.3",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-plugin-serve": "^0.12.1"
  }
}
